{% extends 'base.html.twig' %}

{% block body %}
    <div class="max-w-2xl mx-auto mt-10 px-4">
        <h1 class="text-3xl font-bold text-gray-800 mb-8">Convertir HTML en PDF</h1>

        {% for message in app.flashes('error') %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                <span class="block sm:inline">{{ message }}</span>
            </div>
        {% endfor %}

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {# wkhtmltopdf Form #}
            <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
                <h2 class="text-xl font-bold mb-4">wkhtmltopdf</h2>
                <form action="{{ path('wkhtmltopdf_convert') }}" method="post" enctype="multipart/form-data">
                    <div class="mb-6">
                        <label class="block text-gray-700 text-sm font-bold mb-2" for="file_wk">
                            Fichier HTML
                        </label>
                        <input type="file" 
                               id="file_wk" 
                               name="file" 
                               accept=".html,.htm,.txt"
                               class="block w-full text-sm text-gray-500
                                      file:mr-4 file:py-2 file:px-4
                                      file:rounded-full file:border-0
                                      file:text-sm file:font-semibold
                                      file:bg-blue-50 file:text-blue-700
                                      hover:file:bg-blue-100">
                        <p class="mt-2 text-sm text-gray-500">
                            Meilleur rendu, n√©cessite wkhtmltopdf
                        </p>
                    </div>
                    <button type="submit" 
                            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                        Convertir avec wkhtmltopdf
                    </button>
                </form>
            </div>

            {# DomPDF Form #}
            <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
                <h2 class="text-xl font-bold mb-4">DomPDF</h2>
                <form action="{{ path('dompdf_convert') }}" method="post" enctype="multipart/form-data">
                    <div class="mb-6">
                        <label class="block text-gray-700 text-sm font-bold mb-2" for="file_dom">
                            Fichier HTML
                        </label>
                        <input type="file" 
                               id="file_dom" 
                               name="file" 
                               accept=".html,.htm,.txt"
                               class="block w-full text-sm text-gray-500
                                      file:mr-4 file:py-2 file:px-4
                                      file:rounded-full file:border-0
                                      file:text-sm file:font-semibold
                                      file:bg-blue-50 file:text-blue-700
                                      hover:file:bg-blue-100">
                        <p class="mt-2 text-sm text-gray-500">
                            Solution PHP native, support CSS basique
                        </p>
                    </div>
                    <button type="submit" 
                            class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                        Convertir avec DomPDF
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %} 